<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sendPaymentData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="31 Nov 2020"
            android:textColor="@color/primary_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactionDate"
            android:layout_margin="5dp"
            android:background="@drawable/textview_round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/unitListIimg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_unit_home" />

                <LinearLayout
                    android:id="@+id/layout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unitName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Unit"
                        android:textColor="@color/textcolordarkgray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/unitDiscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Unit 0123, M size with AC   "
                        android:textColor="@color/textcolorgray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/unitDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="1 Dec 2020"
                        android:textColor="@color/textcolordarkgray"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/uniTotalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/poppins_bold"
                    android:text="-$114"
                    android:textAlignment="textEnd"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview1"
            android:layout_margin="5dp"
            android:background="@drawable/textview_round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/insuranceListIimg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:src="@drawable/insurance_icon" />

                <LinearLayout
                    android:id="@+id/layout_text_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unitName_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Insurance"
                        android:textColor="@color/textcolordarkgray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/unitDiscription_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Unit 0123, M size with AC   "
                        android:textColor="@color/textcolorgray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/unitDate_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="1 Dec 2020"
                        android:textColor="@color/textcolordarkgray"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/uniTotalamount_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/poppins_bold"
                    android:text="-$114"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/sendTransactionDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>