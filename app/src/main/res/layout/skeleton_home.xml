<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeScrollColor">

    <include
        android:id="@+id/bar"
        layout="@layout/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hello "
            android:textColor="@color/color_gray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textview_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="My units"
            android:textColor="@color/color_gray"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:background="@drawable/skeleton_view_round"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/access_skeleton_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_title1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/access_skeleton_bg" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_title111"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1.1"
                        android:background="@drawable/skeleton_color_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_title1111"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1.1"
                        android:background="@drawable/skeleton_color_background" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:alpha="2"
                    android:background="@color/txtview_round_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/view2">

                        <LinearLayout
                            android:id="@+id/ll11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <View
                                android:id="@+id/tv_content44"
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/access_skeleton_bg" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll11"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <View
                                android:id="@+id/tv_content3"
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_weight="0.6"
                                android:background="@drawable/skeleton_color_background" />


                        </LinearLayout>

                    </RelativeLayout>


                    <View
                        android:id="@+id/view2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/skeleton_color_background" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view2">

                        <LinearLayout
                            android:id="@+id/ll1111"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <View
                                android:id="@+id/tv_content441"
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/access_skeleton_bg" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll111"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll1111"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <View
                                android:id="@+id/tv_content34"
                                android:layout_width="0dp"
                                android:layout_height="14dp"
                                android:layout_weight="0.7"
                                android:background="@drawable/skeleton_color_background" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:alpha="2"
                    android:background="@color/txtview_round_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:id="@+id/tv_title_1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/access_skeleton_bg" />

                    <View
                        android:id="@+id/tv_title_2"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="60dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/access_skeleton_bg" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:id="@+id/tv_titlee_1"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/skeleton_color_background" />

                <View
                    android:id="@+id/tv_titlee_11"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_weight="0.3" />

                <View
                    android:id="@+id/tv_titlee_2"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/skeleton_color_background" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/skeleton_background_white"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <View

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/skeleton_view_round" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lla"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_titleb"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/access_skeleton_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_titlebbc"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/skeleton_color_background" />

                    <View
                        android:id="@+id/tv_titlebbee"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/access_skeleton_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_titlebbb"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/skeleton_color_background" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/skeleton_background_white"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <View

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/skeleton_view_round" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lla1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_titleb1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/access_skeleton_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_titlebbc1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/skeleton_color_background" />

                    <View
                        android:id="@+id/tv_titlebbee1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/access_skeleton_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:id="@+id/tv_titlebbb1"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/skeleton_color_background" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/layout_middle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/skeleton_view_round"></LinearLayout>


</RelativeLayout>